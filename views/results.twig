{# Results #}

{% extends "templates/app.twig" %}

{% block title %}Search results for {{ query }}...{% endblock %}

{% block content %}

    <div class="container" id="results">

        {% if query %}

            <div class="row w-100 p-0 m-auto justify-content-center">
                <div class="col-12 text-center">
                    <p class="h4 font-weight-bold">Search results for {{ query }}...</p>
                </div>
            </div>

            <div class="row w-100 p-0 m-auto justify-content-center">

                {# RESULTS #}
                {% for mov in results %}

                    <a href="#">

                        <div class="col-xs-10 col-sm-5 col-md-3 text-center p-0 m-3 rounded shadow bg-dark text-white" style="min-width: 300px; max-width: 300px; min-height: 400px;">

                            <div class="container">
                                <div class="row p-3 m-auto justify-content-center">
                                    <p class="col h5 font-weight-bold p-0 m-auto" style="color: #007BFF !important;">{{ mov.title }}</p>
                                </div>
                                <div class="row p-0 justify-content-center m-auto">
                                    <div class="col text-center p-0 m-auto" style="min-width: 300px; max-width: 300px; min-height: 400px; background-color: #000000; background-image: url('https://image.tmdb.org/t/p/w300{{ mov.poster_path }}'); background-repeat: no-repeat; background-position: center top;">&nbsp;
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>

                {% endfor %}

            </div>

        {% else %}

            <div class="row w-100 p-0 m-auto justify-content-center">
                <div class="col-12 text-center">
                    <p class="h4 font-weight-bold">Error!</p>
                    <p>Nothing to search for...</p>
                </div>
            </div>

        {% endif %}

    </div>

{% endblock %}
