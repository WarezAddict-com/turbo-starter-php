{# Flash Messages #}

    <div class="container" id="flash">

        {% for msg in flash() %}

            <div class="row">
                <div class="col-12 w-100 m-auto alert alert-info alert-dismissible fade show" role="alert">

                    <p class="h4 alert-heading font-weight-bold">Message:</p>
                    <p class="text-left font-weight-bold">{{ msg.0 }}</p>

                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
            </div>

        {% endfor %}

    </div>
